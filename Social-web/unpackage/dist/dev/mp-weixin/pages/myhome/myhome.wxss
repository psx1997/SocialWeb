	width: 100%;
	margin-top: 40rpx;
}
.home_web .home_data .data_con {
	background-color: #fff;
	height: 80rpx;
	padding: 10rpx 30rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
}
.home_web .home_data .data_con_hover{
	opacity: 0.9;
	background-color: #ccc;
}
.home_web .home_data .data_con image {
	width: 35rpx;
	height: 35rpx;
	margin-top: 15rpx;
}
.home_web .home_data .data_con .txt_con {
